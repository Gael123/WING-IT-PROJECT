<div class="page-signup" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(https://images.unsplash.com/photo-1516748797119-1456fdcc3201?ixlib=rb-1.2.1&q=85&fm=jpg&crop=entropy&cs=srgb&dl=jason-leung-FeYlAOm-64Y-unsplash.jpg);">
  <div class="animate-container">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs form-signup">
            <%= f.input :username, label: false, placeholder: "Username" %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        label: false,
                        placeholder: "Email" %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label: false,
                        placeholder: "Password" %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: false,
                        placeholder: "Confirm Password" %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn-login" %>
          </div>
          <div class="mt-5">Already have an account? <%= link_to "Log in", new_session_path(resource_name) %><br /></div>
          <%#= render "devise/shared/links" %>
      <% end %>

  </div>
</div>

