<%= render 'shared/navbar'%>

<div class="page-sign-in"  style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(https://cdn.dribbble.com/users/1803663/screenshots/6163551/nature-4.png);">
  <div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-signin">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: false,
                    placeholder: "Email" %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    placeholder: "Password",
                    input_html: { autocomplete: "current-password" } %>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions">
        <%= f.button :submit, "SIGN IN", class: "btn-login" %>
      </div>
    </div>
  <% end %>

  <div class="links">
    <div class="link-forgot-password"><%= link_to "Forgot your password?", new_password_path(resource_name) %><br /></div>
    <div class="link-signin"><span>Don't have an account yet?</span> <%= link_to "Sign up", new_registration_path(resource_name) %><br/></div>
  </div>
  <%#= render "devise/shared/links" %>
  </div>
</div>
